{
  "name": "TFG-MasterClassPlatform",
  "version": "0.0.1",
  "description": "Proyecto de fin del grado de Ingenieria Informatica de la Uned. Una plataforma academica de cursos y conferencias.",
  "repository": {
    "url": ""
  },
  "license": "",
  "engines": {
    "node": ">=16.13.2",
    "npm": ">=8.5.0"
  },
  "scripts": {
    "dev:mooc:backend": "NODE_ENV=dev ts-node-dev --ignore-watch node_modules  ./src/apps/Mooc/backend/start.ts",
    "dev:backoffice:frontend": "NODE_ENV=dev npm run backoffice:frontend",
    "backoffice:frontend": "cd src/apps/Backoffice/frontend && npm run start",
    "prepare": "husky install",
    "lint": "eslint src/**/*.ts{,x}",
    "test": "npm run test:features",
    "test:features": "npm run test:mooc:backend:features",
    "test:mooc:backend:features": "NODE_ENV=test cucumber-js -p mooc_backend",
    "build": "npm run build:clean && npm run build:tsc && npm run build:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:clean": "rm -r dist; exit 0",
    "cypress:open": "NODE_ENV=end2end npm run backoffice:frontend && NODE_ENV=end2end ts-node tests/utils/cypress/open",
    "cypress:run": "NODE_ENV=end2end npm run backoffice:frontend && NODE_ENV=end2end ts-node tests/utils/cypress/run",
    "cypress:ci:start": "NODE_ENV=end2end npm run backoffice:frontend && NODE_ENV=end2end ts-node tests/utils/cypress/startApps"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "bodybuilder": "^2.4.0",
    "bson": "^4.6.1",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.6",
    "cookie-session": "^2.0.0",
    "copy": "^0.3.2",
    "errorhandler": "^1.5.1",
    "express": "^4.17.3",
    "express-promise-router": "^4.1.1",
    "express-validator": "^6.14.0",
    "glob": "^7.2.0",
    "helmet": "^5.0.2",
    "http-status": "^1.5.0",
    "node-dependency-injection": "^2.7.1",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.2",
    "@types/compression": "^1.7.2",
    "@types/connect-flash": "^0.0.37",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.44",
    "@types/errorhandler": "^1.5.0",
    "@types/express": "^4.17.13",
    "@types/glob": "^7.2.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "cypress": "^9.5.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-rules": "^0.4.3",
    "faker": "^6.6.6",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.3",
    "ts-node-dev": "^1.1.8"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
